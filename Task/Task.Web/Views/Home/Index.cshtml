@model UserModel

<link rel="stylesheet" href="~/css/table.css">

<header>
    <div class="menu">
        <h7>Home </h7>
        <div>&#10148; </div>
        <a href="@Url.Action("Index", "Users")">Users </a>
        @if (User.IsInRole("Admin"))
        {
            <div>&#10148; </div>
            <a href="@Url.Action("Index", "Countries")">Countries </a>
            <div>&#10148; </div>
            <a href="@Url.Action("Index", "Cities")">Cities </a>   
        }
