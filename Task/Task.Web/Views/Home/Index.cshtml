    <div class="login">
        <div>
            <b>@User.Identity?.Name</b>
        </div>
        <div class="login-button">
            <a href="/Account/Logout">@if (User.Identity?.Name == null)
                                      {
                                          <i>login</i>
                                      }
                                      else
                                      {
                                          <i>logout</i>
                                      }
                </a>
        </div>
    </div>
